<form class="mf-form" action="https://formspree.io/f/xvolqbeo" id="contact-form" method="POST">
  <label for="email" class="mf-label">Email Address</label>
  <input class="mf-field" name="email" id="email" type="email" />
  <label for="subject" class="mf-label">Subject Line</label>
  <input class="mf-field" name="subject" id="subject" type="text" />
  <label for="message" class="mf-label">Message</label>
  <textarea class="mf-field" name="message" rows="5" id="message"></textarea>
  <div>
    <button class="mf-button mf-button-primary" type="submit" id="submit">Send message</button>
  </div>
</form>
<p class="mf-body" id="form-status"></p>