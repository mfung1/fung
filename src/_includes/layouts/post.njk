---
layout: layouts/base.njk
---
<section class="mf-section">
  <article>
    <div class="mb-30">
      <img class="mf-image" src="{{featuredImage}}" alt=""/>
      <p class="mf-caption col-accent-one">{{topics}}</p>
      <h1 class="mf-h1">{{pageHeading}}</h1>
      <p class="mf-caption">{{page.date|postDate}} - {{length}} minute read</p>
    </div>
    {{content|safe}}
  </article>
  <hr class="mf-divider">
</section>