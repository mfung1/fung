pageTitle: "Projects - Matt Fung - Lincoln UK"
description: "Interesting pieces of work I've done in the past, or just fun things I've built on Codepen"
title: "Projects"
tags: webpage
date: "2021-02-22"
layout: 'layouts/base.njk'
---

{# Imports #}
{% from './_includes/layouts/components/atoms/_skill-point.njk' import skillPoint %}

{% block pageContent %}
<section class="mf-section">
  <div class="mf-section_inner">
    <h1 class="mf-heading-xl mb-20">Projects</h1>
    <p class="mf-standfirst col-black-light">Pieces of work I've done in the past, or just fun things I've built on <a href="#" class="mf-link mf-link-inline">Codepen</a> and <a href="https://www.github.com/mfung1" class=" mf-link mf-link-inline">Github</a>.</p>
  </div>
</section>
<hr class="mf-divider mf-divider--full-width"/>
{% set latestPosts = collections.project|reverse %}

<section class="mf-section" data-callback="fadeUpEffect" data-fade-up>
  <div class="mf-section_inner">
    <h2 class="mf-heading-l mb-30">Github</h2>
    {% if (latestPosts.length > 0) %}
    <ul class="mf-posts">
      
      {% for project in latestPosts.slice(0, 6) %}
      <li>
        <a href="{{project.url}}" class="mf-post">
          <div class="mf-post-image-cnt">
            <img src="{{project.data.featuredImage}}" alt="" class="mf-post_image"/>
          </div>
          <div class="mf-post_copy">
            <p class="mf-badge{%if project.data.topics%} mf-badge-{{project.data.topics}}{%endif%}">{{project.data.topics}}</p>
            <h2 class="mf-subheader" data-matchHeights="clientHeading">{{project.data.pageHeading}}</h2>
          </div>
        </a>
      </li>
      {% endfor %}
    </ul>
    {% else %}
    <p class="mf-standfirst col-black-light">No projects have been added to this site yet.</p>
    {% endif %}
  </div>
</section>

{% set latestPens = collections.pen|reverse %}

<hr class="mf-divider mf-divider-full-width">
<section class="mf-section" data-callback="fadeUpEffect" data-fade-up>
  <div class="mf-section_inner">
    <h2 class="mf-heading-l mb-30">Codepen projects</h2>
    {% if latestPens.length > 0 %}
    <ul class="mf-posts">
      {% for pen in latestPens.slice(0, 6) %}
      <li>
        <a href="{{pen.url}}" class="mf-post">
          <div class="mf-post-image-cnt">
            <img src="{{pen.data.featuredImage}}" alt="" class="mf-post_image"/>
          </div>
          <div class="mf-post_copy">
            <p class="mf-badge{%if pen.data.topics%} mf-badge-{{pen.data.topics}}{%endif%}">{{pen.data.topics}}</p>
            <h2 class="mf-subheader" data-matchHeights="penHeading">{{pen.data.pageHeading}}</h2>
          </div>
        </a>
      </li>
      {% endfor %}
    </ul>
    {% else %}
    <p class="mf-standfirst col-black-light">No pens have been added to this site yet.</p>
    {% endif %}
  </div>
</section>
{% endblock %}